/*------------------------------
  SlidesJS example css
  https://github.com/nathansearles/Slides/
------------------------------*/
.slides
  position: relative

.slides .slidesContainer
  //background:#fff
  //border:8px solid #fff
  //box-shadow: 0 2.5px 5px rgba(0,0,0,.1)

/*
  Next/prev buttons
*/

.slides .slidesNext, .slides .slidesPrevious
  position: absolute
  bottom: 0px
  width: 24px
  height: 0
  padding-top: 32px
  display: block
  z-index: 101
  overflow: hidden
  background: url(/images/slides/navigation-previous.png) no-repeat 0 0

.slides .slidesNext
  right: 0px
  background: url(/images/slides/navigation-next.png) no-repeat 0 0

/*
  Pagination
*/

.slidesPagination
  position: absolute
  bottom: 0px
  left: 90px

.slidesPagination li
  float: left
  margin: 0 1px
  list-style: none

.slidesPagination li a
  display: block
  width: 14px
  height: 0
  padding-top: 14px
  background-image: url(/images/slides/pagination.png)
  background-position: 0 0
  overflow: hidden

.slidesPagination li.slidesCurrent a
  background-position: 0 -14px

.current_slide
  margin: 0
  text-align: center

.controls
  display: block
  margin-top: 12px
  float: left
  color: #333
  font: bold 10px/1.33 sans-serif
  margin-right: 10px

/*------------------------------
