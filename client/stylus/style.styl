/*------------------------------
  Second NavBar / Alert
------------------------------*/
#alert-bottom
  position: fixed
  z-index: 100
  bottom: 20px

  .alert
    max-width: 500px
    margin: 0 auto

#second
  background-color: white

  &.second-fixed
    background-color: white
    box-shadow: 0px 0px 20px #888
    position: fixed
    top: 0
    left: 0
    right: 0
    z-index: 1020

    /*#alert-top
      top: 60px*/

  #word-search
    margin-top: 15px

  #word-title
    margin-right: 10px
    //max-width: 150px
    max-width: 500px
    max-height: 60px
    white-space: nowrap

  /* http://jsfiddle.net/brennan/mcYKE/2/ */
  button.save.loading
    background-image:
      -webkit-gradient(linear, 0 0, 100% 100%,
        color-stop(.25, rgba(0, 0, 0, .10)),
        color-stop(.25, transparent),
        color-stop(.5, transparent),
        color-stop(.5, rgba(0, 0, 0, .10)),
        color-stop(.75, rgba(0, 0, 0, .10)),
        color-stop(.75, transparent),
        to(transparent)
      )
    background-image:
      -moz-linear-gradient(-45deg,
        rgba(0, 0, 0, .10) 25%,
        transparent 25%,
        transparent 50%, rgba(0, 0, 0, .10) 50%,
        rgba(0, 0, 0, .10) 75%,
        transparent 75%, transparent
      )
    background-size: 50px 50px
    -moz-background-size: 50px 50px
    -webkit-background-size: 50px 50px
    -webkit-animation: animate-stripes 2s linear infinite

  @-webkit-keyframes animate-stripes
    from
      background-position: 0 0
    to
      background-position: -50px 0

  #alert-top
    position: fixed
    z-index: 100
    top: 5px
    right: 5px

    .alert
      //max-width: 500px
      margin: 0 auto
      padding-right: 14px

  .control-group
    margin-top: 15px

  .btn-toolbar
    margin-top: 15px

